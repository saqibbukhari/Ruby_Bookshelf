<% if line_item == @inserted_item%>
	<tr id="new_item">
<%else%>
	<tr>
<%end%>
	<td><%= line_item.quantity %>&times;</td>
	<td><%= line_item.product.title %> (<%=number_to_currency line_item.product.price%>)</td>
	<td>&nbsp;</td>
	<td class="item_price"><%= number_to_currency line_item.total_price %></td>
</tr>
