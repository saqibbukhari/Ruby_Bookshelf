<% unless cart.line_items.empty? %>
<div class="cart_title">Your Cart</div>
<hr />
	<table>
		<%= render cart.line_items%>
		
		<tr class="total_line" >
			<td colspan="3" >Total</td>
			<td class="total_cell" ><%= number_to_currency cart.total_price %></td>
		</tr>
	</table>
	<table>
		<tr>
			<td colspan="2"><%= button_to 'Empty cart', cart, :method => :delete, data: { confirm: 'Are you sure?' } %></td>
			<td colspan="2"><%= button_to "Checkout", new_order_path, :method => :get %></td>
		</tr>
	</table>	
<%end%>

